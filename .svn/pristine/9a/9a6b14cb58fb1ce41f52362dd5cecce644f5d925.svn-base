@import "../../component/toast/index.wxss";
.container {
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  height:100%;
  overflow-x: hidden;
}
.circle {
position: relative;
left: 20rpx;
top: 20rpx;
background: #f1f1f1 none repeat scroll 0 0;
height: 60rpx;
width: 710rpx;
border-radius:30rpx
}
.search {
position: absolute;
left: 22rpx;
top: 14rpx;
}
.search_text {
  position: absolute;
left: 75rpx;
top:-5rpx;
width:550rpx;
height:80rpx;
text-align:left;
}
.speech_btn {
position: absolute;
left: 660rpx;
top: 12rpx;
width: 30rpx;
height: 40rpx;
background-color: #eeeeee;
}
.speech {
position: absolute; 
z-index:100;
left: 0rpx;
top: -1rpx;
width: 750rpx;
height: 1200rpx;
}
.cancel {
position: absolute;
z-index:101;
left: 60rpx;
top: 715rpx;
width: 315rpx;
height: 100rpx;
}
.ok {
position: absolute;
z-index:101;
left: 380rpx;
top: 715rpx;
width: 315rpx;
height: 100rpx;
}
.hide{
    display:none
}
.recommend_title {
  position: relative;
  left: 30rpx;
  top: 80rpx;
}

.song_item_container {
  position: relative;
  top: 100rpx;
  left:30rpx;
  height: 116rpx;
  border-bottom-width: 1rpx;
  border-bottom-color: #e6eaf2;
  border-bottom-style: solid;
  line-height: 116rpx;
}
.slide {
  animation: slideAnimation 0.3s ease;
  animation-fill-mode: forwards;
}

.restore {
  animation: restoreAnimation 0.3s ease;
  animation-fill-mode: forwards;
}

@keyframes slideAnimation {
  from {
    margin-left: 0rpx;
  }

  to {
    margin-left: -166rpx;
  }
}

@keyframes restoreAnimation {
  from {
    margin-left: -166rpx;
  }

  to {
    margin-left: 0rpx;
  }
}
.song_name {
  color: #3c4a55;
}

.song_player {
  right: 55rpx;
  position: absolute;
  color: #bdc2d3;
  font-size: 30rpx;
}
.song_item {
  width: 100%;
  z-index: 10;
  position: relative;
  padding-left: 10rpx;
}

.fav {
  position: absolute;
  right: -155rpx;
  z-index: -1;
  background-color: red;
  color: white;
  height: 116rpx;
  width: 166rpx;
  text-align: center;
}
