@import "../../component/toast/index.wxss";
.container {
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  height:100%;
  overflow-x: hidden;
}

.top_song {
  position: absolute;
  right: -142rpx;
  z-index: -1;
  background-color: #f9a92a;
  color: white;
  height: 116rpx;
  width: 142rpx;
  text-align: center;
}

.top_song_first {
  position: absolute;
  right: -142rpx;
  z-index: -1;
  background-color: gray;
  color: white;
  height: 116rpx;
  width: 142rpx;
  text-align: center;
}

.remove_song {
  position: absolute;
  right: -284rpx;
  z-index: -1;
  background-color: #f55353;
  color: white;
  height: 116rpx;
  width: 142rpx;
  text-align: center;
}

.song_item {
  width: 100%;
  z-index: 10;
  position: relative;
  padding-left: 10rpx;
  padding-right: 0;
}

.song_name {
  color: #3c4a55;
}

.song_player {
  right: 23rpx;
  position: absolute;
  color: #bdc2d3;
  font-size: 30rpx;
}

.song_item_container {
  position: relative;
  height: 116rpx;
  border-bottom-width: 1rpx;
  border-bottom-color: #e6eaf2;
  border-bottom-style: solid;
  line-height: 116rpx;
}

.slide {
  animation: slideAnimation 0.3s ease;
  animation-fill-mode: forwards;
}

.restore {
  animation: restoreAnimation 0.3s ease;
  animation-fill-mode: forwards;
}

@keyframes slideAnimation {
  from {
    margin-left: 0rpx;
  }

  to {
    margin-left: -288rpx;
  }
}

@keyframes restoreAnimation {
  from {
    margin-left: -288rpx;
  }

  to {
    margin-left: 0rpx;
  }
}
