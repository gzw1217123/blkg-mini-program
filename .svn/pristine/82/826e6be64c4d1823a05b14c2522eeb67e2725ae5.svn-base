@import "../../../component/toast/index.wxss";
.container {
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  height:100%;
  overflow-x: hidden;
}

.tip {
    color:#99a4bf;
    font-size: 28rpx;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.song_item {
  width: 100%;
  z-index: 10;
  position: relative;
  padding-left: 10rpx;
}

.fav {
  position: absolute;
  right:-186rpx;
  z-index: -1;
  background-color: red;
  color: white;
  height: 116rpx;
  width: 196rpx;
  text-align: center;
}

.song_name {
  color: #3c4a55;
}

.song_player {
  right: 23rpx;
  position: absolute;
  color: #bdc2d3;
  font-size: 30rpx;
}

.song_item_container {
  position: relative;
  height: 116rpx;
  border-bottom-width: 1rpx;
  border-bottom-color: #e6eaf2;
  border-bottom-style: solid;
  line-height: 116rpx;
}

.slide {
    animation:slideAnimation 0.3s ease;
    animation-fill-mode: forwards;
}
.restore {
    animation:restoreAnimation 0.3s ease;
    animation-fill-mode: forwards;
}

@keyframes slideAnimation { 
    from {margin-left: 0;}
    to {margin-left: -195rpx;}
}
@keyframes restoreAnimation {
    from {margin-left: -195rpx;}
    to {margin-left: 0;}
}